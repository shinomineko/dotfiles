export PS1="\h \w \\$ \[$(tput sgr0)\]"

[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion

if [ $ITERM_SESSION_ID ]; then
  export PROMPT_COMMAND='echo -ne "\033];${PWD##*/}\007"; ':"$PROMPT_COMMAND";
fi

alias ll="ls -lh"
alias la="ls -lha"
alias lt="ls -lrt"

function cheat() {
  curl cht.sh/"$1"
}
