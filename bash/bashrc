#!/usr/bin/env bash

# Prompt
export PS1="\n\h \w \\$ \[$(tput sgr0)\]"


# History
export HISTSIZE=10000
export HISEFILESIZE=10000


# Node
PATH="/usr/local/opt/node@8/bin:$PATH"

# Golang
GOPATH=$HOME/go
export GOPATH

# Bash Completion
[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion


# Aliases
alias ll="ls -lh"
alias la="ls -lha"
alias lt="ls -lrt"

alias gcc="gcc-8"
alias g++="g++-8"


# Custom Functions
function cheat() {
  curl cht.sh/"$1"
}


# Finalizing
export PATH

