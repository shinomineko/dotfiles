# toggle window fullscreen
ctrl + alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
ctrl + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
ctrl + alt - a : chunkc tiling::desktop --layout bsp
ctrl + alt - s : chunkc tiling::desktop --layout monocle
ctrl + alt - d : chunkc tiling::desktop --layout float

# change focus
ctrl + alt - h : chunkc tiling::window --focus west
ctrl + alt - j : chunkc tiling::window --focus south
ctrl + alt - k : chunkc tiling::window --focus north
ctrl + alt - l : chunkc tiling::window --focus east

# move focused window
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

# rotate tree
ctrl + alt - r : chunkc tiling::desktop --rotate 90

# equalize size of windows
ctrl + alt - 0 : chunkc tiling::desktop --equalize

# move focused window to desktop
ctrl + alt - p : chunkc tiling::window --send-to-desktop prev
ctrl + alt - n : chunkc tiling::window --send-to-desktop next
ctrl + alt - 1 : chunkc tiling::window --send-to-desktop 1
ctrl + alt - 2 : chunkc tiling::window --send-to-desktop 2
ctrl + alt - 3 : chunkc tiling::window --send-to-desktop 3
ctrl + alt - 4 : chunkc tiling::window --send-to-desktop 4
ctrl + alt - 5 : chunkc tiling::window --send-to-desktop 5

# switch desktop
ctrl - left : chunkc tiling::desktop --focus prev
ctrl - right : chunkc tiling::desktop --focus next
ctrl - 1 : chunkc tiling::desktop --focus 1
ctrl - 2 : chunkc tiling::desktop --focus 2
ctrl - 3 : chunkc tiling::desktop --focus 3
ctrl - 4 : chunkc tiling::desktop --focus 4
ctrl - 5 : chunkc tiling::desktop --focus 5

# for screenshot
cmd + shift - 4 -> : chunkc border::clear
