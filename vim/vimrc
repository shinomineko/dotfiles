syntax on

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab

set number
set ruler

set backupcopy=yes

set ignorecase
set smartcase

set fileformat=unix

set mouse=a

if !isdirectory($HOME."/.vim")
    call mkdir($HOME."/.vim", "", 0770)
endif
if !isdirectory($HOME."/.vim/undodir")
    call mkdir($HOME."/.vim/undodir", "", 0700)
endif
set undofile
set undodir=~/.vim/undodir

