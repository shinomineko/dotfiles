#!/usr/bin/env bash

function running() {
    echo -e " -> "$1""
}

running "Install Homebrew"
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew --version

running "Install Ansible"
brew install ansible
ansible --version

running "Clone Ansible roles"
git clone https://github.com/shinomineko/ansible-mac-provision.git ~/provision

running "Run provision playbook"
cd ~/provision
ansible-playbook play.yml --ask-become-pass
